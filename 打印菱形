#include<stdio.h>

int main()
{
	int m = 0;
	int n = 0;
	
	for (m = 0; m < 4; m++)
	{
		for (n =0; n <4-m; n++)
		{
			printf(" ");
		}
		for (n = 0; n <( 2 * m + 1); n++)
		{
			printf("*");
		}
     printf("\n");
	}

	for (m = 0; m < 3; m++)
	{
		for (n = 0; n < 2+m; n++)
		{
			printf(" ");
		}
		for (n = 0; n < (5-2 * m); n++)
		{
			printf("*");
		}
		printf("\n");
	}

	return 0;
}
